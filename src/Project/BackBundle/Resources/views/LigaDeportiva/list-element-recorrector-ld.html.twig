{%for key,element in events %}
<tr id="fila_{{key}}">
	<td >{{element.fecha}}</td>
	<td >{{element.grupo}}</td>
	<td >{{element.nombre_evento}}</td>
	<td >{{element.pronostico_corregido}}</td>
	<td>
		<select id="event_{{key}}" name="event_{{key}}" >
			<option value='-1' selected='selected'>No corregir</option>
			<option value='-2'>Nulo</option>
			{%for option in options[key]%}
                <option value="{{option.pronostico_id}}">
					{{option.nombre_pronostico}} ({{option.cuota}}) 
				</option>
			{%endfor%}
               
		</select>
   </td>
	<td>
	<div class="hidden-phone visible-desktop btn-group" tipo="" objeto="{{key}}" corregido="{{element.corregido}}" >
		<button class="btn btn-primary  btn-info recorregir-evento-corrector-ld" >
			<i class="icon-wrench bigger-120"></i>
		</button>
	</div>
	<div class="hidden-desktop visible-phone">
		<div class="inline position-relative">
			<button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown">
				<i class="icon-cog icon-only bigger-110"></i>
			</button>
			<ul class="dropdown-menu dropdown-icon-only dropdown-yellow pull-right dropdown-caret dropdown-close" tipo="" objeto="{{key}}" corregido="{{element.corregido}}" >
				<li class="recorregir-evento-corrector-ld">
					<a href="javascript:void(0)" class="tooltip-success editar" data-rel="tooltip" title="Corregir" objeto="{{element.id_evento}}"> <span class="green"> <i class="icon-wrench bigger-120"></i> </span> </a>
				</li>
			</ul>
		</div>
	</div>
    </td>
</tr>
{%endfor%}
